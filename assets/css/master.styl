@import '_settings'
@import '_header'
@import '_footer'
@import '_carousel'

normalize-css()
base()

// Global styling
html
  background-color #F3CF95

body
  min-width 750px

.body-content, .header
  padding 0 50px 0 50px
.header
  padding-top 50px

.header a.topnav:not(:first-child), .footer-nav a
  text-decoration none
  border-bottom 2px solid transparent
  -webkit-transition 0.3s ease
  transition 0.3s ease
  white-space nowrap
.header a.topnav:not(:first-child):hover, .footer-nav a:hover
  border-bottom 2px solid black

a:link, a:visited
  color black

.body-content
  min-height 465px

.spacer
  width 100%
  height 20px

p
  color grey
  line-height 1.3em

p.recycled
  color blue

p.upcycle
  color orange

// Homepage
img.welcome
  float right
  border 5px ridge #EDB65E
  margin-left 10px
  margin-bottom 10px
  width 55%
  min-width 250px
  max-width 45%

// Contact
.contactPage
  ul.methods
    list-style none
    width: 200px
    position relative

  li
    position relative
    width 100%

    span
      position relative
      padding 20px
      display block
      z-index 20
      color #808080
      text-decoration none
      border-radius 10px
      text-align center

    a
      position absolute
      display block
      left 0
      top 15px
      z-index 10
      text-decoration none
      -webkit-transition all 0.4s ease
      padding 5px
      padding-left 10px
      color white
      white-space nowrap
      border-top-right-radius 5px
      border-bottom-right-radius 5px

  li:hover a
    margin 0 0 0 195px
    background hsla(37, 80%, 50%, 1.0)

  li:nth-child(1) span
    background: hsla(37, 80%, 60%, 1.0)
  li:nth-child(2) span
    background: hsla(37, 80%, 65%, 1.0)
  li:nth-child(3) span
    background: hsla(37, 80%, 70%, 1.0)

// Policy
ul.policy li
  list-style none
  line-height 1.3em
 
.policies p
  padding-left 40px

  span
    display list-item
    list-style none
    padding-top 10px

#polUpdated
  font-size 14px